# MySQL/MariaDB Optimization Configuration
# Colocar en /etc/mysql/conf.d/ o agregar a my.cnf en producción
# Ajustar valores según RAM disponible del servidor

[mysqld]

# === Conexiones ===
max_connections = 200
max_connect_errors = 1000
connect_timeout = 10
wait_timeout = 600
interactive_timeout = 600

# === InnoDB Buffer Pool (50-70% de RAM disponible) ===
# Para servidor con 4GB RAM: usar 2G
# Para servidor con 8GB RAM: usar 4G
innodb_buffer_pool_size = 2G
innodb_buffer_pool_instances = 4

# === InnoDB Log ===
innodb_log_file_size = 512M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# === Query Cache (para MySQL < 8.0) ===
# En MySQL 8.0+ ya no existe query cache
query_cache_type = 1
query_cache_size = 64M
query_cache_limit = 2M

# === Tablas temporales ===
tmp_table_size = 128M
max_heap_table_size = 128M

# === Optimización de sort y join ===
sort_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 4M
join_buffer_size = 4M

# === Thread cache ===
thread_cache_size = 50

# === Table cache ===
table_open_cache = 4000
table_definition_cache = 2000

# === InnoDB Performance ===
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000

# === Slow Query Log (para monitoreo) ===
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow-query.log
long_query_time = 2
log_queries_not_using_indexes = 1

# === Binary Logs (reducir si no se usa replicación) ===
expire_logs_days = 3
max_binlog_size = 100M
